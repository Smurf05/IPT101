<Window x:Class="MotorcycleCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Motorcycle Catalog" Height="500" Width="780"
        FontFamily="Poppins, Segoe UI" FontSize="14">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E0F0FF" Offset="0"/>
            <GradientStop Color="#FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#666" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.25" />
            </Border.Effect>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">

                <StackPanel Margin="0,0,15,0" Width="130">
                    <TextBlock Text="Brand" FontWeight="Bold" Foreground="#222" Margin="0,0,0,6"/>
                    <TextBox Name="BrandTextBox" Padding="6" BorderBrush="#CCC" BorderThickness="1" Background="#F9FAFC" />
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Width="130">
                    <TextBlock Text="Model" FontWeight="Bold" Foreground="#222" Margin="0,0,0,6"/>
                    <TextBox Name="ModelTextBox" Padding="6" BorderBrush="#CCC" BorderThickness="1" Background="#F9FAFC" />
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Width="110">
                    <TextBlock Text="Color" FontWeight="Bold" Foreground="#222" Margin="0,0,0,6"/>
                    <TextBox Name="ColorTextBox" Padding="6" BorderBrush="#CCC" BorderThickness="1" Background="#F9FAFC" />
                </StackPanel>

                <StackPanel Margin="0,0,15,0" Width="150">
                    <TextBlock Text="Engine Number" FontWeight="Bold" Foreground="#222" Margin="0,0,0,6"/>
                    <TextBox Name="EngineNumberTextBox" Padding="6" BorderBrush="#CCC" BorderThickness="1" Background="#F9FAFC" />
                </StackPanel>

                <StackPanel Margin="0,0,20,0" Width="150">
                    <TextBlock Text="Chassis Number" FontWeight="Bold" Foreground="#222" Margin="0,0,0,6"/>
                    <TextBox Name="ChassisNumberTextBox" Padding="6" BorderBrush="#CCC" BorderThickness="1" Background="#F9FAFC" />
                </StackPanel>

                <Button Content="Add" Width="90" Height="38" Padding="6" FontWeight="Bold"
                        Background="#0078D7" Foreground="White" BorderThickness="0" VerticalAlignment="Bottom"
                        Click="AddButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0078D7"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontFamily" Value="Poppins, Segoe UI"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#003E6B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="15">
            <Border.Effect>
                <DropShadowEffect Color="#666" Direction="270" ShadowDepth="4" BlurRadius="12" Opacity="0.25" />
            </Border.Effect>

            <DataGrid Name="MotorcycleDataGrid" AutoGenerateColumns="False" CanUserAddRows="False"
                      HeadersVisibility="Column" GridLinesVisibility="None"
                      RowBackground="#F7FAFF" AlternatingRowBackground="White"
                      FontSize="14" FontFamily="Poppins, Segoe UI"
                      SelectionMode="Single" SelectionUnit="FullRow"
                      HorizontalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="*" />
                    <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*" />
                    <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="*" />
                    <DataGridTextColumn Header="Engine Number" Binding="{Binding EngineNumber}" Width="*" />
                    <DataGridTextColumn Header="Chassis Number" Binding="{Binding ChassisNumber}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</Window>
